<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewsResponseListViewActivity" 
    android:background="@drawable/background">

    <TextView
        android:id="@+id/ScrapedNews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:text="Scraped News"
        android:drawableRight="@drawable/smalnewsbutton"
        android:textColor="#000000"
        android:textStyle="bold|italic" 
        android:textSize="25sp"
        />
    <View 
        android:id="@+id/lineView"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/ScrapedNews"
        android:background="@android:color/black"/>
    
    <View 
        android:id="@+id/blankSpacing"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/lineView"
        />

    <ListView
        android:id="@+id/NewsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector = "@drawable/list_selector"
        android:layout_below="@+id/blankSpacing"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="3dp"
        
         />

</RelativeLayout>
